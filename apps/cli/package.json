{
	"name": "@snowdrive/package-starter",
	"version": "0.0.0-beta.2",
	"author": "Luciano Morales",
	"description": "A CLI tool to create starter templates for new npm packages",
	"license": "GPL-3.0-or-later",
	"type": "module",
	"main": "src/index.js",
	"publishConfig": {
		"access": "public",
		"tag": "beta"
	},
	"scripts": {
		"start": "node dist/index.js",
		"build": "tsup",
		"build:watch": "tsup --watch"
	},
	"bin": {
		"package-starter": "./src/index.js"
	},
	"dependencies": {
		"commander": "12.1.0",
		"inquirer": "9.2.22",
		"simple-git": "3.24.0"
	},
	"devDependencies": {
		"@types/inquirer": "9.0.7"
	}
}
